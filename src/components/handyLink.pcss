.handy-link {
    display: grid;
    gap: 1em;
    background-color: hsla(0, 0%, 100%, 0.1);
    border-radius: 1rem;
    padding: 1em;

    & header {
        display: grid;
        grid-template-columns: 8em 1fr;
        grid-template-areas: "image title"
        "image subtitle";
        align-items: center;
        gap: 1rem;
    }

    & .app-image {
        grid-area: image;
        border-radius: 1em;
        width: 8em;
        height: auto;
    }

    & .app-title {
        grid-area: title;
        font-size: 1.8rem;
        font-weight: 700;
    }

    & .app-subtitle {
        grid-area: subtitle;
        font-size: 1.1rem;
        font-weight: 600;
    }

    & p {
        margin-block: 1em;
    }

    .stores-layout {
        margin-top: 1em;
        display: flex;
        gap: 2em;
        align-self: flex-end;
        justify-self: center;
    }
}